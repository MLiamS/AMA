{{#if addNewSubject}}
<div>
  <form>
    <div class="form-group">
      <label for="owner">Name</label>
      {{input value=owner id="owner"}}
    </div>
    <div class="subject">
      <label for="subject">What would like to know</label>
      {{input value=subject id="subject"}}
    </div>
    <button {{action 'saveSubject'}}>Add a new Subject</button>
  </form>
</div>
{{else}}
  <button {{action 'subjectFormShow'}}>New Subject</button>
{{/if}}
